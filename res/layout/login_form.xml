<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd"
    android:orientation="vertical" >

<LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:src="@drawable/synature"
            android:layout_gravity="center" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >
					

                <com.cengalabs.flatui.views.FlatTextView
                    android:id="@+id/txtUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Username: "
                    android:textSize="18dp"
                    flatui:fl_fontWeight="regular"
                    flatui:fl_fontFamily="roboto"
                    flatui:fl_fontExtension="ttf"
                    android:textColor="#000000" />

                <com.cengalabs.flatui.views.FlatTextView
                    android:id="@+id/txtPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Password: "
                    android:textSize="18dp"
                    flatui:fl_fontExtension="ttf"
                    flatui:fl_fontFamily="roboto"
                    flatui:fl_fontWeight="regular"
                    android:textColor="#000000" />
                
                
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

				<com.cengalabs.flatui.views.FlatEditText
                android:id="@+id/edtUserName"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
              	android:layout_weight="1"
                android:ems="10"
                android:gravity="left" 
                android:textSize="18dp"
        		android:textColor="#000000"
        		android:singleLine="true"
        		flatui:fl_theme="@array/snow"
        		flatui:fl_fieldStyle="box" />
				
                <com.cengalabs.flatui.views.FlatEditText
                    android:id="@+id/edtPassword"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="left"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    flatui:fl_fieldStyle="box"
                    flatui:fl_theme="@array/snow" />

        </LinearLayout>
    </LinearLayout>

        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/btnLogin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            flatui:fl_blockButtonEffectHeight="5dp"
            flatui:fl_theme="@array/sea"
            flatui:fl_fontExtension="ttf"
            flatui:fl_fontFamily="roboto"
            flatui:fl_fontWeight="regular" />
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp" >
            
            <com.cengalabs.flatui.views.FlatTextView
            android:id="@+id/txtUDID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UDID : "
            android:textSize="18dp"
        	android:textColor="#000000"
	        flatui:fl_fontExtension="ttf"
            flatui:fl_fontFamily="roboto"
            flatui:fl_fontWeight="regular" />
            

            <com.cengalabs.flatui.views.FlatTextView
                android:id="@+id/value_udid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHOW UDID CODE"
                android:textSize="18dp"
                android:textColor="#000000"
	        	flatui:fl_fontExtension="ttf"
            flatui:fl_fontFamily="roboto"
            flatui:fl_fontWeight="regular" />
            
        </LinearLayout>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="bottom" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp" >
                
                <com.cengalabs.flatui.views.FlatButton
		            android:id="@+id/btnUpdate"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Update"
		            android:textColor="#000000"
		            android:layout_gravity="bottom|left"
		            android:layout_margin="10dp"
		            android:drawableLeft="@drawable/ic_system_update_black_24dp"
		            android:drawablePadding="5dp"
		            flatui:fl_blockButtonEffectHeight="5dp"
            		flatui:fl_theme="@array/sea"
            		flatui:fl_fontExtension="ttf"
            flatui:fl_fontFamily="roboto"
            flatui:fl_fontWeight="regular" />
                
			<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                android:gravity="right" >
                
                <com.cengalabs.flatui.views.FlatButton
		            android:id="@+id/btnSetting"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Setting"
		            android:textColor="#000000" 
		            android:layout_gravity="bottom|left"
		            android:layout_margin="10dp"
		            android:drawableLeft="@drawable/ic_settings_black_24dp"
		            android:drawablePadding="5dp"
		            flatui:fl_blockButtonEffectHeight="5dp"
            		flatui:fl_theme="@array/sea"
            		flatui:fl_fontExtension="ttf"
            flatui:fl_fontFamily="roboto"
            flatui:fl_fontWeight="regular" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

</LinearLayout>
</LinearLayout>