<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<LinearLayout 
    android:id="@+id/saledate_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="left"
    android:background="#ffffff"
     >
<LinearLayout 
              
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="left" >
    
    <LinearLayout
        android:id="@+id/boxReportShow_Sumsale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@color/candy_primary" >
        

    <com.example.flatuilibrary.FlatTextView
        android:id="@+id/shopNameValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="20dp"
        flatui:fl_fontWeight="bold"
        android:textColor="#ffffff" />
    
</LinearLayout>
<LinearLayout
        android:id="@+id/boxDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:paddingTop="2dp" >
   <LinearLayout
            android:id="@+id/headTablesaledate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/candy_primary"
            android:orientation="horizontal"
            android:layout_marginBottom="2dp" >
	        
	        <com.example.flatuilibrary.FlatTextView
	            android:id="@+id/text_tableSaledatename"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:paddingBottom="3dp"
	            android:paddingTop="2dp"
	            android:text="Sale By Date Chart"
	            android:textColor="#ffffff"
	            android:textSize="20dp"
	            android:background="@color/candy_primary"
	            android:textStyle="bold"
	            android:layout_marginBottom="2dp"
	            flatui:fl_fontWeight="regular" />
	        
        </LinearLayout>
<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/chart1"
        android:layout_width="match_parent"
        android:layout_height="400dp" />

</LinearLayout>
</LinearLayout>
</LinearLayout>
</LinearLayout>

</ScrollView>